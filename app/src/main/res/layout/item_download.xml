<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/nodowntask"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="暫無下載任務"
        android:textSize="30sp"
        android:visibility="gone"
        android:textColor="@color/black"
        android:background="@color/colorWhite"
        tools:visibility="visible"/>

    <RelativeLayout
        android:id="@+id/downtask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvFileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Hello World!" />

        <TextView
            android:id="@+id/downstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            tools:text="正在下载"
            android:layout_below="@+id/tvFileName"/>

        <ProgressBar
            android:id="@+id/pbProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvFileName"
            android:layout_below="@+id/downstate"/>

        <Button
            android:id="@+id/btStop"
            style="?android:buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/pbProgress"
            android:text="停止"/>

        <Button
            android:id="@+id/btStart"
            style="?android:buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/btStop"
            android:layout_below="@id/pbProgress"
            android:text="下载"/>
    </RelativeLayout>



</RelativeLayout>